@model MvcMovie.Models.BookFilterViewModel

@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Books</h1>
        <p class="text-muted mb-0">Track what you're reading, finished, or want to start.</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">+ Add Book</a>
    </div>
</div>

<div class="card-like mb-4">
    <form asp-controller="Books" asp-action="Index" method="get">
        <div class="row g-3 align-items-end">

            <div class="col-md-3">
                <label asp-for="SelectedGenre" class="form-label">Genre</label>
                <select asp-for="SelectedGenre" asp-items="Model.Genres" class="form-select">
                    <option value="">All</option>
                </select>
            </div>

            <div class="col-md-3">
                <label asp-for="SelectedAuthor" class="form-label">Author</label>
                <select asp-for="SelectedAuthor" asp-items="Model.Authors" class="form-select">
                    <option value="">All</option>
                </select>
            </div>

            <div class="col-md-3">
                <label asp-for="SelectedStatus" class="form-label">Progress</label>
                <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="form-select">
                    <option value="">All</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label" for="TitleSearch">Title</label>
                <input type="text" name="titleSearch" value="@Model.TitleSearch" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label" for="releaseYear">Release Year</label>
                <input type="number" name="releaseYear" value="@Model.ReleaseYear" class="form-control" />
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary mt-2">Apply Filters</button>
            </div>

        </div>
    </form>
</div>

@if (Model.Books == null || !Model.Books.Any())
{
    <div class="card-like">
        <p class="mb-0 text-muted">No books match your filters.</p>
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>@Html.DisplayNameFor(m => m.Books![0].ReleaseDate)</th>
                <th>@Html.DisplayNameFor(m => m.Books![0].Genre)</th>
                <th>@Html.DisplayNameFor(m => m.Books![0].Status)</th>
                <th>Completion</th>
                <th>@Html.DisplayNameFor(m => m.Books![0].Rating)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Books!)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.Genre</td>
                <td>
                    <span class="status-badge status-@item.Status.Replace(" ", "").ToLower()">
                        @item.Status
                    </span>
                </td>
                <td>
                    @item.CompletionPercent % 
                    <span class="text-muted">(@item.CurrentPage / @item.TotalPages)</span>
                </td>
                <td>@item.Rating</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary btn-action me-1">Edit</a>

                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-secondary btn-action me-1">Details</a>

                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-danger btn-action">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
