@model MvcMovie.Models.BookFilterViewModel

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Books" asp-action="Index" method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label asp-for="SelectedGenre" class="form-label">Genre</label>
            <select asp-for="SelectedGenre" asp-items="Model.Genres" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-3">
            <label asp-for="SelectedAuthor" class="form-label">Author</label>
            <select asp-for="SelectedAuthor" asp-items="Model.Authors" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label" for="TitleSearch">Title</label>
            <input type="text" name="titleSearch" value="@Model.TitleSearch" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label" for="releaseYear">Release Year</label>
            <input type="number" name="releaseYear" value="@Model.ReleaseYear" class="form-control" />
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>@Html.DisplayNameFor(m => m.Books![0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(m => m.Books![0].Genre)</th>
            <th>@Html.DisplayNameFor(m => m.Books![0].Status)</th>
            <th>Completion</th>
            <th>@Html.DisplayNameFor(m => m.Books![0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Books != null)
    {
        foreach (var item in Model.Books)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.ReleaseDate.ToShortDateString()</td>
                <td>@item.Genre</td>
                <td>@item.Status</td>
                <td>@item.CompletionPercent % (@item.CurrentPage / @item.TotalPages)</td>
                <td>@item.Rating</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
